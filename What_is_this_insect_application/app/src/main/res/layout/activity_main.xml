<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.google.mediapipe.examples.gesturerecognizer.MainActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.serenegiant.widget.UVCCameraTextureView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <com.google.mediapipe.examples.gesturerecognizer.OverlayView
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/camera_view"
            android:layout_alignBottom="@+id/camera_view"
            android:layout_alignStart="@+id/camera_view"
            android:layout_alignEnd="@+id/camera_view"/>

        <ImageView
            android:id="@+id/frame_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/camera_view"
            android:layout_alignBottom="@+id/camera_view"
            android:layout_alignStart="@+id/camera_view"
            android:layout_alignEnd="@+id/camera_view"
            android:src="@drawable/border" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ToggleButton
                android:id="@+id/camera_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/togglebutton" />

            <!-- 追加ボタン-->
            <Button
                android:id="@+id/rirekiNavigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gotoRireki"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/helpNavigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gotoHelp"
                android:translationX="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>